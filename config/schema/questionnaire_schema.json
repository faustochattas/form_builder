{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": ["id", "title", "questions"],
  "properties": {
    "id": { "type": "string" },
    "title": { "type": "string" },
    "questions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "type", "label"],
        "properties": {
          "id": { "type": "string" },
          "type": {
            "type": "string",
            "enum": ["text", "checkbox", "radio", "dropdown", "boolean"]
          },
          "label": { "type": "string" },
          "min_length": { "type": "integer", "minimum": 0 },
          "max_length": { "type": "integer", "minimum": 0 },
          "options": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["label", "value"],
              "properties": {
                "label": { "type": "string" },
                "value": {}
              }
            }
          },
          "preset": { "type": "string" },
          "allow_other": { "type": "boolean" },
          "allow_none": { "type": "boolean" },
          "visible_if": { "type": "object" }
        }
      }
    }
  }
}